                    rows="1"
                    class="flex-1 bg-transparent resize-none outline-none text-gray-100 placeholder-gray-500 max-h-32"
                    onInput="this.style.height = 'auto'; this.style.height = Math.min(this.scrollHeight, 128) + 'px';"
                ></textarea>
                
                <!-- Terminal Toggle Button -->
                <button id="terminal-toggle-btn" 
                        class="p-2 text-gray-400 hover:text-white hover:bg-dark-hover rounded-xl transition-colors"
                        title="Terminal ein/aus">
                    <i data-lucide="square-terminal" class="w-5 h-5"></i>
                </button>
                
                <button id="send-btn" 
                        class="p-2 bg-accent-primary hover:bg-blue-600 rounded-xl transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                    <i data-lucide="send" class="w-5 h-5"></i>
                </button>
            </div>
            
            <!-- Status Bar -->
            <div id="status-bar" class="flex items-center justify-between mt-2 text-xs text-gray-500">
                <div class="flex items-center gap-4">
                    <span id="connection-status" class="flex items-center gap-1">
                        <span class="w-2 h-2 bg-yellow-500 rounded-full"></span>
                        Connecting...
                    </span>
                    <span id="history-status" class="text-gray-600">
                        History: <span id="history-status-count">0</span>/<span id="history-status-limit">10</span>
                    </span>
                </div>
                <div id="memory-status" class="flex items-center gap-1 opacity-0 transition-opacity">
                    <i data-lucide="database" class="w-3 h-3"></i>
                    <span>Memory used</span>
                </div>
            </div>
        </div>
    </footer>
    
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <!-- JAVASCRIPT -->
    <!-- ═══════════════════════════════════════════════════════════════ -->
    <script type="module">
        import { initApp } from './static/js/app.js';
        
        // Initialize Lucide icons
        lucide.createIcons();
        
        // Tab switching for settings modal
        document.querySelectorAll('.settings-tab').forEach(tab => {
            tab.addEventListener('click', () => {
                const tabName = tab.dataset.tab;
                
                // Update tab styling
                document.querySelectorAll('.settings-tab').forEach(t => {
                    t.classList.remove('tab-active');
                    t.classList.add('tab-inactive');
                });
                tab.classList.remove('tab-inactive');
                tab.classList.add('tab-active');
                
                // Show/hide tab content
                document.querySelectorAll('.settings-tab-content').forEach(content => {
                    content.classList.add('hidden');
                });
                document.getElementById(`tab-${tabName}`).classList.remove('hidden');
            });
        });
        
        // Quick Mode switcher
        document.getElementById('quick-mode-btn').addEventListener('click', () => {
            document.getElementById('quick-mode-dropdown').classList.toggle('hidden');
        });
        
        document.querySelectorAll('.quick-mode-option').forEach(btn => {
            btn.addEventListener('click', () => {
                const mode = btn.dataset.mode;
                const modeName = btn.querySelector('.font-medium').textContent;
                document.getElementById('quick-mode-name').textContent = modeName;
                document.getElementById('quick-mode-dropdown').classList.add('hidden');
                
                // Remove active state from all
                document.querySelectorAll('.quick-mode-option').forEach(b => {
                    b.classList.remove('bg-dark-hover');
                });
                // Add to clicked
                btn.classList.add('bg-dark-hover');
                
                // Apply mode settings (implement in app.js)
                console.log('Quick mode changed to:', mode);
            });
        });
        
        // Slider value updates
        document.getElementById('thinking-temp').addEventListener('input', (e) => {
            document.getElementById('thinking-temp-value').textContent = e.target.value;
        });
        document.getElementById('control-temp').addEventListener('input', (e) => {
            document.getElementById('control-temp-value').textContent = e.target.value;
        });
        document.getElementById('output-temp').addEventListener('input', (e) => {
            document.getElementById('output-temp-value').textContent = e.target.value;
        });
        document.getElementById('topk-slider').addEventListener('input', (e) => {
            document.getElementById('topk-value').textContent = e.target.value;
        });
        document.getElementById('similarity-slider').addEventListener('input', (e) => {
            document.getElementById('similarity-value').textContent = e.target.value;
        });
        document.getElementById('stm-days-slider').addEventListener('input', (e) => {
            document.getElementById('stm-days-value').textContent = e.target.value;
        });
        document.getElementById('validation-threshold').addEventListener('input', (e) => {
            document.getElementById('validation-threshold-value').textContent = e.target.value;
        });
        
        // Auto-save toggle
        document.getElementById('autosave-toggle').addEventListener('click', function() {
            this.classList.toggle('bg-accent-primary');
            this.classList.toggle('bg-dark-border');
            const knob = this.querySelector('span');
            knob.classList.toggle('translate-x-6');
            knob.classList.toggle('bg-white');
            knob.classList.toggle('bg-gray-400');
        });
        
        // Layer toggles
        ['thinking', 'control', 'output'].forEach(layer => {
            document.getElementById(`${layer}-layer-toggle`).addEventListener('click', function() {
                this.classList.toggle('bg-accent-primary');
                this.classList.toggle('bg-gray-600');
                const knob = this.querySelector('span');
                knob.classList.toggle('translate-x-6');
                knob.classList.toggle('bg-white');
                knob.classList.toggle('bg-gray-400');
            });
        });
        
        // Close dropdowns on outside click
        document.addEventListener('click', (e) => {
            if (!e.target.closest('#quick-mode-btn') && !e.target.closest('#quick-mode-dropdown')) {
                document.getElementById('quick-mode-dropdown').classList.add('hidden');
            }
            if (!e.target.closest('#more-actions-btn') && !e.target.closest('#more-actions-dropdown')) {
                document.getElementById('more-actions-dropdown').classList.add('hidden');
            }
        });
        
        // More actions toggle
        document.getElementById('more-actions-btn').addEventListener('click', () => {
            document.getElementById('more-actions-dropdown').classList.toggle('hidden');
        });
        
        // Quick action buttons
        document.getElementById('action-clear-memory').addEventListener('click', () => {
            if (confirm('Clear all memory for this conversation?')) {
                console.log('Clear memory clicked');
                // Implement in app.js
            }
        });
        
        document.getElementById('action-regenerate').addEventListener('click', () => {
            console.log('Regenerate clicked');
            // Implement in app.js
        });
        
        document.getElementById('action-copy').addEventListener('click', () => {
            console.log('Copy clicked');
            // Implement in app.js
        });
        
        document.getElementById('action-export').addEventListener('click', () => {
            console.log('Export clicked');
            // Implement in app.js
        });
        
        // Run maintenance from memory tab
        document.getElementById('run-maintenance-btn').addEventListener('click', () => {
            document.getElementById('settings-modal').classList.add('hidden');
            document.getElementById('maintenance-btn').click();
        });
        
        // Initialize main app
        initApp();
    </script>
</body>
</html>
